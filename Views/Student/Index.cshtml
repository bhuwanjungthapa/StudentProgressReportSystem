 @{
	ViewData["Title"]="All Student";
}
@model IEnumerable<StudentProgressReportSystem.Models.Student>
<div class="row justify-content-md-center">
	<div class="col-8">
		<h3 class="text-center text-primary">All Student</h3>
		<a class="btn btn-success" asp-action="Create" asp-controller="Student">Create Student</a>
		@if(TempData["msg"] is not null)
		{
			<div class="alert alert-success">@TempData["msg"]</div>
		}
		@if(TempData["msg"] is not null)
		{
			<div class="alert alert-danger">@TempData["error"]</div>
		}
		<table class="table table-border">
			<thead>
				<th>Sno</th>
				<th>Name</th>
				<th>Email</th>
				<th>DateOfBirth</th>
				<th>Description</th>
			</thead>
			<tbody>
				@foreach(var s in Model)
				{
					<tr class="text-center">

						<td>@s.Name</td>
						<td>@s.DateOfBirth</td>
						<td>@s.Email</td>
						<td>@s.Description</td>

					<td>
						<a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@s.Id">Edit</a>
						<a class="btn btn-danger" asp-controller="Student" asp-action="Remove" asp-route-id="@s.Id">Delete</a>
					</td>
					</tr>
				}
			</tbody>
		</table>
		
	</div>
</div>